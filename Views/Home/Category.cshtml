                background: transparent;
                font-size: 14px;
                width: 260px; 
            }

            .search-bar button {
                background: none;
                border: none;
                padding: 0 10px;
                cursor: pointer;
                font-size: 16px;
                color: #555;
            }


        .sort-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 14px;
        }

        .sort-dropdown {
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .sort-dropdown select {
                border: none;
                background: none;
                font-size: 14px;
                cursor: pointer;
                color: #333;
            }
        /* Popup sắp xếp */
        .sort-box {
            display: flex;
            justify-content: flex-end; /* canh phải */
            position: relative;
        }

            .sort-box button {
                background: none;
                border: none;
                cursor: pointer;
                font-weight: bold;
                display: flex;
                align-items: center;
                gap: 5px;
            }

        .sort-popup {
            display: none;
            position: absolute;
            top: 120%;
            right: 0;
            width: 180px;
            background: #fff;
            border: 1px solid #ddd;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            z-index: 10;
            border-radius: 4px;
        }

            .sort-popup ul {
                list-style: none;
                margin: 0;
                padding: 5px 0;
            }

            .sort-popup li {
                padding: 10px 12px;
                cursor: pointer;
                font-size: 14px;
            }

                .sort-popup li:hover {
                    background-color: #f0f0f0;
                }


        .arrow {
