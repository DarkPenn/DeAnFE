    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
        }
        .banner {
            width: 100%;
            height: 200px;
            overflow: hidden; /* ẩn phần ảnh tràn khi zoom */
            padding-bottom: 10px;
        }

            .banner img {
                max-width: 100%;
                height: auto;
                display: block;
                margin: 0 auto;
                transition: transform 0.8s ease-in-out;
            }

                .banner img:hover {
                    transform: scale(1.05);
                    cursor: pointer;
                }

        .combo-container {
            display: flex;
            justify-content: center;
            gap: 10px;
            padding-left: 300px;
            padding-right: 300px;
            padding-bottom: 20px;
        }

        .combo {
            display: inline-block;
            overflow: hidden;
            cursor: pointer;
        }

            .combo img {
                display: block;
                width: 70%;
                height: auto;
            }

        /* BỐ CỤC CHUNG */
        .container {
            display: flex;
            align-items: flex-start;
        }

        /* ========== SIDEBAR ========== */
        .sidebar {
            width: 400px;
            border-right: 1px solid #ddd;
            padding: 30px;
            background: #fff;
            height: 100vh;
            overflow-y: hidden;
        }

        /* ========== KHU VỰC SẢN PHẨM ========== */
        .product-area {
            flex: 1;
            padding: 30px;
            background: #fafafa;
        }

        .product-list {
            display: grid;
            grid-template-columns: repeat(4, 1fr); /* 4 sản phẩm mỗi dòng */
            gap: 25px;
        }

        .product-card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            text-align: center;
            padding: 10px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .product-card img {
                width: 100%;
                height: 220px;
                object-fit: cover;
                border-radius: 8px;
            }

            .product-card h4 {
                margin: 10px 0 5px;
                font-size: 16px;
                color: #333;
            }

                .product-card h4:hover {
                    color: lawngreen;
                }

            .product-card p {
                color: #d32f2f;
                font-weight: bold;
                margin: 0;
            }

        /* ========== FILTER SUMMARY (LỌC THEO) ========== */
        .filter-summary {
            border: 1px solid #ddd;
            padding: 30px;
            margin-bottom: 15px;
            background: #f9f9f9;
        }

        .summary-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .clear-all {
            background: none;
            border: none;
            color: black;
            font-size: 8px;
            cursor: pointer;
        }

        .summary-body {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
        }

        .filter-tag {
            background: #eee;
            padding: 5px 8px;
            border-radius: 3px;
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .filter-tag button {
                border: none;
                background: none;
                color: #d00;
                font-size: 12px;
                cursor: pointer;
            }

        /* ========== FILTER GROUP ========== */
        .filter-group {
            margin-bottom: 20px;
        }

        .filter-title {
            font-weight: bold;
            font-size: 14px;
            cursor: pointer;
            padding: 10px 0;
            border-bottom: 1px solid #ccc;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #f9f9f9;
        }

        .arrow {
            border: solid #333;
            border-width: 0 2px 2px 0;
            display: inline-block;
            padding: 4px;
            transform: rotate(0deg);
            transition: transform 0.2s ease;
        }

        .filter-title.active .arrow {
            transform: rotate(45deg);
        }

        .filter-options {
            list-style: none;
            padding-left: 0;
            margin: 10px 0;
            display: none;
            overflow-y: auto; /* Cuộn dọc riêng */
            scrollbar-width: thin;
            max-height: 180px;
        }
            /* Thanh cuộn cho Chrome/Edge */
            .filter-options::-webkit-scrollbar {
                width: 6px;
            }

            .filter-options::-webkit-scrollbar-thumb {
                background-color: #ccc;
                border-radius: 3px;
            }

                .filter-options::-webkit-scrollbar-thumb:hover {
                    background-color: #aaa;
                }

            .filter-options li {
                margin: 5px 0;
                font-size: 13px;
            }

                .filter-options li label {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    font-size: 13px;
                    cursor: pointer;
                }

            .filter-options input[type="checkbox"] {
                margin-right: 5px;
            }

            .filter-options .option-name {
                flex-grow: 1;
            }

            .filter-options .option-count {
                margin-left: 10px;
                white-space: nowrap;
                color: #666;
            }
        /* THANH TÌM KIẾM & SẮP XẾP */
        .product-toolbar {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 25px;
        }

        .search-bar {
            display: inline-flex; /* thay vì flex full hàng */
            align-items: center;
            border: 1px solid #ddd;
            border-radius: 6px;
            overflow: hidden;
            background: #f8f8f8;
            width: auto; /* tự co theo nội dung */
