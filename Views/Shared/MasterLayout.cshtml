@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Adidas Store</title>
    <link rel="stylesheet" href="~/Content/Css/MasterLayout.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <script src="/Scripts/MasterLayout.js" defer></script>

</head>
<body>
    <!-- HEADER -->
    <header>
        <!-- Top green bar -->
        <div class="top-bar">
            <button class="topbar-btn prev">&#10094;</button>
            <div class="topbar-content"> 
                <div class="topbar-item active"> 
                    🔥 Giảm giá đến 50% cho tất cả giày thể thao Adidas! 
                    <a href="#" class="topbar-link">Xem ngay</a> 
                </div> 
                <div class="topbar-item"> 
                    🏃‍♂️ Mua 1 tặng 1 cho trang phục chạy bộ cuối tuần này! 
                    <a href="#" class="topbar-link">Xem ngay</a> </div> 
                <div class="topbar-item"> 
                    🎁 Thành viên Supersports nhận thêm ưu đãi 10% toàn bộ hóa đơn! 
                    <a href="#" class="topbar-link">Xem ngay</a> 
                </div> <div class="topbar-item"> 
                    🚚 Miễn phí giao hàng toàn quốc cho đơn từ 500.000đ! 
                    <a href="#" class="topbar-link">Xem ngay</a> 
                </div> 
            </div> 
            <button class="topbar-btn next">&#10095;</button>
        </div> <!-- Main navigation --> 
            <div class="main-header"> 
                <div class="logo"> 
                    <img src="https://supersports.com.vn/images/supersports-logo.svg" alt="Supersports Logo"> 
                </div> 
                <nav class="nav-menu"> 
                    <ul> 
                        <li>
                            <a href="#">Hàng Mới</a>
                        </li> 
                        <li>
                            <a href="#">Nam</a>
                        </li> 
                        <li>
                            <a href="#">Nữ</a>
                        </li> 
                        <li>
                            <a href="#">Trẻ Em</a>
                        </li> 
                        <li>
                            <a href="#">Phụ Kiện</a>    
                        </li> 
                        <li>
                            <a href="#">Thương Hiệu</a>
                        </li> 
                        <li>
                            <a href="#">Thể Thao</a>
                        </li> 
                        <li>
                            <a href="#" class="highlight">Ưu Đãi</a>
                        </li> 
                    </ul> 
                </nav> 
                <div class="search-box"> 
                    <input type="text" placeholder="Bạn đang tìm gì"> 
                    <button> <span class="material-symbols-outlined">search</span> </button> 
                </div> 
                <div class="icons"> 
                    <span class="material-symbols-outlined">person</span> 
                    <span class="material-symbols-outlined">shopping_bag</span> 
                    <span class="material-symbols-outlined">location_on</span> 
                    <span class="material-symbols-outlined">receipt_long</span> 
                    <img class="flag" src="https://flagcdn.com/w40/vn.png" alt="Vietnam Flag">
                    <span class="material-symbols-outlined" style="font-size: 18px; vertical-align: middle;">arrow_drop_down</span> 
                    <br /> 
                </div> 
            </div> 
            <!-- Bottom info bar --> 
            <div class="info-bar"> 
                <span>🚚 Miễn phí giao hàng đơn từ 699k</span> 
                <span>📦 Miễn phí đổi trả đến 30 ngày</span> 
                <span>✅ Cam kết 100% chính hãng</span> 
                <span>🏷️ Đăng ký nhận ngay 150k</span> 
            </div>
    </header>
    <!-- MAIN CONTENT -->
    <main> @RenderBody() </main> 
    <!-- FOOTER --> 
